doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(name='description', content='')
    meta(name='author', content='')
    title Creative - Start Bootstrap Theme
    // Bootstrap Core CSS
    link(rel='stylesheet', href='css/bootstrap.min.css', type='text/css')
    // Custom Fonts
    link(href='https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800', rel='stylesheet', type='text/css')
    link(href='https://fonts.googleapis.com/css?family=Merriweather:400,300,300italic,400italic,700,700italic,900,900italic', rel='stylesheet', type='text/css')
    link(rel='stylesheet', href='font-awesome/css/font-awesome.min.css', type='text/css')
    // Plugin CSS
    link(rel='stylesheet', href='css/magnific-popup.css', type='text/css')
    // Custom CSS
    link(rel='stylesheet', href='css/creative.css', type='text/css')
    // HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries
    // WARNING: Respond.js doesn't work if you view the page via file://
    //if lt IE 9
      script(src='https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js')
      script(src='https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js')
  body#page-top
    nav#mainNav.navbar.navbar-default.navbar-fixed-top
      .container-fluid
        // Brand and toggle get grouped for better mobile display
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand.page-scroll(href='#page-top') Start Bootstrap
        // Collect the nav links, forms, and other content for toggling
        #bs-example-navbar-collapse-1.collapse.navbar-collapse
          ul.nav.navbar-nav.navbar-right
            li
              a.page-scroll(href='#about') About
            li
              a.page-scroll(href='#services') Services
            li
              a.page-scroll(href='#contact') Contact
        // /.navbar-collapse
      // /.container-fluid
    header
      .header-content
        .header-content-inner
          h1 Find the best Shisha lounges near you
          hr
          a.btn.btn-primary.btn-xl.page-scroll(href='#services') Find Out More
    section#about.bg-primary
      .container
        .row
          .col-lg-8.col-lg-offset-2.text-center
            h2.section-heading
              a(href='lounge?city=amsterdam')
                img(src='cool.jpg',  width='150', height='90')
              | amsterdam
    section#services
      .container
        .row
          .col-lg-12.text-center
            h2.section-heading Hier komt add lounge
            hr.primary
      .container
        .row
          .col-lg-3.col-md-6.text-center
            .service-box
          //
            <br>
            <form method="post" action="test.html">
            <input type="text" name="loungeName"> Name of your lounge<br>
            <input type="text" name="streetName"> Streetname<br>
            <input type="text" name="houseNumber"> House number<br>
            <input type="text" name="postcode"> Postcode<br>
            <input type="text" name="city"> City<br>
            <input type="text" name="tel"> Phone number<br>
            <input type="submit" value="Verzend">
            </form>
          button.btn.btn-primary.btn-lg(data-toggle='modal', data-target='#myModalNorm')
            | Add a lounge
          // Modal
          #myModalNorm.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
            .modal-dialog
              .modal-content
                // Modal Header
                // Modal Body
                .modal-body
                  form(role='form', method='post', action='test')
                    .form-group
                      label Name of your lounge
                      input.form-control(type='text', name='loungeName')
                    .form-group
                      label Street name
                      input.form-control(type='text', name='streetName')
                    .form-group
                      label House number
                      input.form-control(type='text', name='houseNumber')
                    .form-group
                      label Postcode
                      input.form-control(type='text', name='postcode')
                    .form-group
                      label City
                      select(name='city', id='people')
                        option(value="amsterdam") AMSTERDAM
                    .form-group
                      label Phone number
                      input.form-control(type='text', name='tel')
                    button.btn.btn-default(type='submit') Submit
                // Modal Footer
                .modal-footer
                  button.btn.btn-default(type='button', data-dismiss='modal')
                    | Close
    section#contact
      .container
        .row
          .col-lg-8.col-lg-offset-2.text-center
            h2.section-heading Let's Get In Touch!
            hr.primary
            p Contact lan
    // jQuery
    script(src='js/jquery.js')
    // Bootstrap Core JavaScript
    script(src='js/bootstrap.min.js')
    // Plugin JavaScript
    script(src='js/scrollreveal.min.js')
    script(src='js/jquery.easing.min.js')
    script(src='js/jquery.fittext.js')
    script(src='js/jquery.magnific-popup.min.js')
    // Custom Theme JavaScript
    script(src='js/creative.js')
