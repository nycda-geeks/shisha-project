			script(src='https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js')
			script(src='https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js')

		link(rel='stylesheet', href='css/mystyle.css', type='text/css')
	body#page-top
		nav#mainNav.navbar.navbar-default.navbar-fixed-top
			.container-fluid
				// Brand and toggle get grouped for better mobile display
				.navbar-header
					button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1')
						span.sr-only Toggle navigation
						span.icon-bar
						span.icon-bar
						span.icon-bar
					a.navbar-brand.page-scroll(href='#page-top') Shisha Finder
				// Collect the nav links, forms, and other content for toggling
				#bs-example-navbar-collapse-1.collapse.navbar-collapse
					ul.nav.navbar-nav.navbar-right
						li
							a.page-scroll(href='#about') About
						li
							a.page-scroll(href='#services') Services
						li
							a.page-scroll(href='#contact') Contact
				// /.navbar-collapse
				// /.container-fluid
		header
			.header-content
				.header-content-inner
					h1 Find the best Shisha lounges near you
					hr
					a.btn.btn-primary.btn-xl.page-scroll(href='#services') Find Out More

					.col-lg-12.text-center 
						form(action='/search', method='post', id="shisha-search")
							select(name='options', onchange='showCustomer(this.value)', class="form-control", id="sel1")
								option(value='') Search on ...
								option(value='city') City
								option(value='loungeName') Name
								option(value='loungeStreet') Street
								#custom-search-input
							.input-group.col-md-12
								input.form-control.input-lg(name='entry', type='text', placeholder='Search')
								span.input-group-btn
									button.btn.btn-info.btn-lg(type='submit', value="post")
										i.glyphicon.glyphicon-search

						//- input(type='text', name='entry')
		section#about.bg-primary
			.container
				.row
					.col-lg-8.col-lg-offset-2.text-center
						h2.section-heading
							
							| The best Shisha lounges
						h3.sub Selected with care


		section#portfolio.no-padding
			.container-fluid
				.row.no-gutter.popup-gallery
					.col-lg-4.col-sm-6
						a.portfolio-box(href='lounge?city=amsterdam')
							img.img-responsive(src='img/city-overview/amster-1.jpg', alt='')
							.portfolio-box-caption
								.portfolio-box-caption-content
									.project-name
										| Amsterdam
					.col-lg-4.col-sm-6
						a.portfolio-box(href='img/portfolio/fullsize/2.jpg')
							img.img-responsive(src='img/city-overview/rotter-1.jpg', alt='')
							.portfolio-box-caption
								.portfolio-box-caption-content
									.project-name
										| Rotterdam
					.col-lg-4.col-sm-6
						a.portfolio-box(href='/amsterdam.jad')
							img.img-responsive(src='img/city-overview/hague-1.jpg', alt='')
							.portfolio-box-caption
								.portfolio-box-caption-content
									.project-name
										| Den Haag



		section#services
			.container
				.row
					.col-lg-12.text-center
						h2.section-heading Hier komt add lounge
						hr.primary
					.col-lg-12.text-center
						button.btn.btn-primary.btn-lg(data-toggle='modal', data-target='#myModalNorm')
							| Add a lounge
						// Modal
						#myModalNorm.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
							.modal-dialog
								.modal-content
									// Modal Header
									// Modal Body
									.modal-body
										form(role='form', method='post', action='test')
											.form-group
												label Name of your lounge
												input.form-control(type='text', name='loungeName')
											.form-group
												label Street name
												input.form-control(type='text', name='streetName')
											.form-group
												label House number
												input.form-control(type='text', name='houseNumber')
											.form-group
												label Postcode
												input.form-control(type='text', name='postcode')
											.form-group
												label City
												select(name='city', id='lijst')
													option(value="amsterdam") AMSTERDAM
											.form-group
												label Phone number
												input.form-control(type='text', name='tel')
											button.btn.btn-default(type='submit') Submit
									// Modal Footer
									.modal-footer
										button.btn.btn-default(type='button', data-dismiss='modal')
											| Close

		section#contact
			.container
				.row
					.col-lg-12.text-center
						h2.section-heading Contact Us
						h3.section-subheading.text-muted Feel free to leave us a message
				.row
					.col-lg-12
						form#contactForm(name='sentMessage', novalidate='')
							.row
								.col-md-6
									.form-group
										input#name.form-control(type='text', placeholder='Your Name *', required='', data-validation-required-message='Please enter your name.')
										p.help-block.text-danger
									.form-group
										input#email.form-control(type='email', placeholder='Your Email *', required='', data-validation-required-message='Please enter your email address.')
										p.help-block.text-danger
									.form-group
										input#phone.form-control(type='tel', placeholder='Your Phone *', required='', data-validation-required-message='Please enter your phone number.')
										p.help-block.text-danger
								.col-md-6
									.form-group
										textarea#message.form-control(placeholder='Your Message *', required='', data-validation-required-message='Please enter a message.')
										p.help-block.text-danger
								.clearfix
								.col-lg-12.text-center
									#success
									button.btn.btn-xl(type='submit') Send Message

		footer
			.container
				.row
					.col-md-4
						span.copyright Copyright Â© Shisha Finder 2016
					.col-md-4
						ul.list-inline.social-buttons
							li
								a(href='#')
									i.fa.fa-twitter
							li
								a(href='#')
									i.fa.fa-facebook
							li
								a(href='#')
									i.fa.fa-linkedin
					.col-md-4
						ul.list-inline.quicklinks
							li
								a(href='#') Privacy Policy
							li
								a(href='#') Terms of Use
