	body#page-top
		nav#mainNav.navbar.navbar-default.navbar-fixed-top
			.container-fluid
				// Brand and toggle get grouped for better mobile display
				.navbar-header
					button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1')
						span.sr-only Toggle navigation
						span.icon-bar
						span.icon-bar
						span.icon-bar
					a.navbar-brand.page-scroll(href='#page-top') Shisha Finder
				// Collect the nav links, forms, and other content for toggling
				#bs-example-navbar-collapse-1.collapse.navbar-collapse
					ul.nav.navbar-nav.navbar-right
						li
							a.page-scroll(href='#about') About
						li
							a.page-scroll(href='#services') Services
						li
							a.page-scroll(href='#contact') Contact
				// /.navbar-collapse
				// /.container-fluid
		header#city
			.header-content
				.header-content-inner
					h1 Search Results
		// View-options
		#maps-bar.row
			div
				each lounge in lounges
					h3= lounge.loungeName
					h3= lounge.tel
					h3= lounge.postcode
					h3= lounge.city
					h3= lounge.streetName
					h3= lounge.houseNumber